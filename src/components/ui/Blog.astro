---
import { Image } from "astro:assets";

interface Props {
	src: ImageMetadata;
	id: string;
}

const { src, id } = Astro.props;
---

<a href=`/blogs/${id}` class="blog-card">
	<Image
		class="blog-img"
		src={src}
		alt=`${id}`
		width={240}
		format="webp"
		loading="lazy"
		transition:name=`background ${id}`
	/>
	<h3 transition:name=`title ${id}`><slot /></h3>
</a>

<style>
	.blog-card {
		display: grid;
		grid-template-rows: 200px 1fr;
		padding: 0;
		border-radius: 16px;
		overflow: hidden;
		cursor: pointer;
		border: 1px solid #dde;
		transition: transform 0.1s;
	}
	.blog-card:hover {
		text-decoration: none;
		transform: scale(1.05);
	}
	.blog-card h3 {
		color: #212;
		padding: 30px;
		font-size: 1.7rem;
	}
	.blog-img {
		object-fit: cover;
		aspect-ratio: 1.41;
		width: 100%;
		height: 100%;
	}
</style>
